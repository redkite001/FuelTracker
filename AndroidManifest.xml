<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.redkite.fueltracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="be.redkite.fueltracker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="be.redkite.fueltracker.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="be.redkite.fueltracker.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.redkite.fueltracker.MainActivity" />
        </activity>
        <activity
            android:name="be.redkite.fueltracker.NewFillActivity"
            android:label="@string/title_activity_fill"
            android:parentActivityName="be.redkite.fueltracker.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.redkite.fueltracker.MainActivity" />
        </activity>
    </application>

</manifest>
